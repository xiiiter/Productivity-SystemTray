{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "productivity",
  "version": "0.1.0",
  "identifier": "com.tray.popup.app",

  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },

  "app": {
    "withGlobalTauri": true,

    "windows": [
      {
        "label": "popup",
        "title": "Popup",
        "width": 350,
        "height": 400,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false,
        "center": true
      }
    ],

    "security": {
      "csp": null
    }
  },

  "bundle": {
    "icon": [
      "icons/logo.ico",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/256x256.png"
    ]
  }
}
